
{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": false,
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ES2020", "DOM"],
        "outDir": "../dist",
        "rootDir": ".",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "allowJs": false,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmitOnError": true,
        "strictFunctionTypes": false
    },
    "include": [
        "**/*.ts"
    ]
}
